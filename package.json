{
  "name": "morscout",
  "description": "FRC scouting application from MorTorq Robotics",
  "author": "MorTorq Robotics <mortorqrobotics@gmail.com> (https://team1515.org)",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node Server/build/server",
    "test": "jest",
    "test:snyk": "snyk test",
    "test-coverage": "jest --coverage",
    "release": "release-it",
    "commit": "run-s -s git-add git-cz git-push",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx \"Client/*\" Shared Server",
    "postinstall": "run-p -s protect patch",
    "patch": "patch-package",
    "protect": "snyk protect",
    "git-add": "git-add",
    "git-cz": "git-cz",
    "git-push": "git push",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.1.2"
  },
  "workspaces": {
    "packages": [
      "Client/*",
      "Client/common/*",
      "Server",
      "Shared"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native*",
      "**/react-native*/**",
      "**/appcenter",
      "**/appcenter/**",
      "**/appcenter*",
      "**/appcenter*/**"
    ]
  },
  "main": "Server/build/server.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "snyk": true
}
