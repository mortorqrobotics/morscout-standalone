{
  "name": "morscout",
  "description": "FRC scouting application from MorTorq Robotics",
  "author": "MorTorq Robotics <mortorqrobotics@gmail.com> (https://team1515.org)",
  "version": "0.0.1-alpha.1",
  "private": true,
  "scripts": {
    "start": "node server/build/server",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "release": "release-it",
    "commit": "run-s -s git-add git-cz git-push",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx clients shared server",
    "patch": "patch-package",
    "git-add": "git-add",
    "git-cz": "git-cz",
    "git-push": "git push"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.0"
  },
  "devDependencies": {
    "git-add": "^0.0.2",
    "git-cz": "^3.2.1",
    "jest-junit": "^8.0.0",
    "release-it": "^12.4.1",
    "set-versions": "^1.0.3"
  },
  "workspaces": {
    "packages": [
      "shared",
      "clients/common/*",
      "clients/*",
      "server"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native*",
      "**/react-native*/**",
      "**/appcenter",
      "**/appcenter/**",
      "**/appcenter*",
      "**/appcenter*/**"
    ]
  },
  "main": "server/build/server.js",
  "snyk": true
