{
  "name": "morscout",
  "description": "FRC scouting application from MorTorq Robotics",
  "author": "MorTorq Robotics <mortorqrobotics@gmail.com> (https://team1515.org)",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node Server/build/server",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "release": "release-it",
    "commit": "run-s -s git-add git-cz git-push",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx \"clients/*\" \"clients/common/*\" shared Server",
    "patch": "patch-package",
    "git-add": "git-add",
    "git-cz": "git-cz",
    "git-push": "git push"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.1.2"
  },
  "devDependencies": {
    "git-cz": "^3.2.1",
    "git-add": "^0.0.2"
  },
  "workspaces": {
    "packages": [
      "clients/*",
      "clients/common/*",
      "server",
      "shared"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native*",
      "**/react-native*/**",
      "**/appcenter",
      "**/appcenter/**",
      "**/appcenter*",
      "**/appcenter*/**"
    ]
  },
  "main": "Server/build/server.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "snyk": true
}
