{
  "git": {
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "preRelease": true,
    "assets": ["release.zip"],
    "beforeStartCommand": "npx bestzip dist/release.zip app/build/* server/build/* cli/build/*"
  },
  "prompt": {
    "release": true
  },
  "scripts": {
    "beforeStart": "npm run build",
    "beforeStage":"npm run zip",
    "afterRelease": "rm release.zip"
  }
}
